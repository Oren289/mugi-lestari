<div class="container mt-5">
   <div class="row">
     <div class="col">
       <div class="card">
         <div class="card-body" style="font-size: 1.1em">
           <h3>Order Detail</h3>
           <hr />
           <div class="row g-3 align-items-center">
             <div class="col-md-2">
               <label for="inputPassword6" class="col-form-label fw-bold">Id</label>
             </div>
             <div class="col">
               <div><%= order.id %></div>
             </div>
           </div>
           <div class="row g-3 align-items-center">
             <div class="col-md-2">
               <label for="inputPassword6" class="col-form-label fw-bold">Username</label>
             </div>
             <div class="col">
               <div><%= order.username %></div>
             </div>
           </div>
           <div class="row g-3 align-items-center">
             <div class="col-md-2">
               <label for="inputPassword6" class="col-form-label fw-bold">Products</label>
             </div>
             <div class="col">
               <div><% (order.products).forEach(product => { %> <%= product.name %>; <% }) %></div>
             </div>
           </div>
           <div class="row g-3 align-items-center">
             <div class="col-md-2">
               <label for="inputPassword6" class="col-form-label fw-bold">User Phone</label>
             </div>
             <div class="col">
               <div><% (order.userinfo).forEach(userinfo => { %> <%= userinfo.phone %> <% }) %></div>
             </div>
           </div>
           <div class="row g-3 align-items-center">
             <div class="col-md-2">
               <label for="inputPassword6" class="col-form-label fw-bold">User Address</label>
             </div>
             <div class="col">
               <div><% (order.userinfo).forEach(userinfo => { %> <%= userinfo.address %> <% }) %></div>
             </div>
           </div>
           <div class="row g-3 align-items-center">
             <div class="col-md-2">
               <label for="inputPassword6" class="col-form-label fw-bold">Timestamp</label>
             </div>
             <div class="col">
               <div><%= order.timestamp %></div>
             </div>
           </div>
           <form action="/umkm-edit?_method=PUT" method="POST">
             <div class="row g-3 align-items-center">
               <div class="col-md-2">
                 <label for="inputPassword6" class="col-form-label fw-bold">Order Status</label>
               </div>
               <div class="col">
                 <select name="orderStatus" id="orderStatus" class="form-control">
                   <option value="Menunggu konfimasi penjual" <%- order.orderStatus === 'Menunggu konfirmasi penjual' ? 'selected' : null %>>Menunggu konfirmasi penjual</option>
                   <option value="Barang sedang dikemas" <%- order.orderStatus === 'Barang sedang dikemas' ? 'selected' : null %>>Barang sedang dikemas</option>
                   <option value="Barang sedang dikirim" <%- order.orderStatus === 'Barang sedang dikirim' ? 'selected' : null %>>Barang sedang dikirim</option>
                   <option value="Selesai" <%- order.orderStatus === 'Selesai' ? 'selected' : null %>>Selesai</option>
                 </select>
               </div>
             </div>
             <div class="row g-3 align-items-center">
               <div class="col-md-2">
                 <label for="inputPassword6" class="col-form-label fw-bold">Payment Status</label>
               </div>
               <div class="col">
                 <div><%= order.paymentStatus %></div>
               </div>
             </div>
             <input type="hidden" value="<%= order.id %>" name="id" />
             <div class="row align-items-center mt-3">
               <div class="col d-grid">
                 <button type="submit" class="btn btn-primary">Save Changes</button>
               </div>
             </div>
           </form>
         </div>
       </div>
     </div>
   </div>
 </div>
 