<div class="container mt-4">
  <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/products">Products</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= product.product_name %></li>
    </ol>
  </nav>
  <div class="row">
    <div class="col-md-4">
      <img src="/uploads/<%= product.image_name %>" alt="" class="detail-img" />
    </div>
    <div class="col">
      <h2 class="fw-bold mt-4 mt-sm-0"><%= product.product_name %></h2>
      <h1 class="fw-bold" id="price">Rp <%= product.price.toLocaleString() %></h1>
      <h4 class="mt-5">Description</h4>
      <p><%= product.description %></p>
      <div class="card mb-3 mb-sm-0">
        <div class="card-body">
          <div class="row d-flex flex-sm-row flex-column">
            <div class="col-lg-5">
              <div class="me-md-5 fw-bold">Category</div>
            </div>
            <div class="col">
              <div><%= product.category %></div>
            </div>
          </div>
          <div class="row d-flex flex-sm-row flex-column mt-2">
            <div class="col-lg-5">
              <div class="me-md-5 fw-bold">Nama UMKM</div>
            </div>
            <div class="col">
              <div><%= umkm.umkm_name %></div>
            </div>
          </div>
          <div class="row d-flex flex-sm-row flex-column mt-2">
            <div class="col-lg-5">
              <div class="me-md-5 fw-bold">Alamat UMKM</div>
            </div>
            <div class="col">
              <div><%= umkm.alamat %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4 class="fw-bold">Order</h4>
          <form action="/cart" method="post" class="mt-3">
            <input type="hidden" name="name" value="<%= product.product_name %>" />
            <input type="hidden" name="price" value="<%= product.price %>" />
            <input type="hidden" name="umkm" value="<%= product.umkm %>" />
            <input type="hidden" name="image" value="<%= product.image_name %>" />
            <div class="row d-flex align-items-center">
              <div class="col-md-4">
                <label for="quantity" class="form-label">Quantity</label>
              </div>
              <div class="col">
                <input type="hidden" value="<%= product._id %>" name="product_id" />
                <input type="number" class="form-control" name="quantity" id="quantity" min="1" value="1" />
              </div>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary mt-3">+ Cart</button>
              <a href="#" class="btn btn-secondary mt-2">Buy Now</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <hr class="mt-5" />
  <div class="row mt-4 d-flex">
    <h4 class="mb-4 text-center text-lg-start">Other Products</h4>
    <div class="col d-flex flex-wrap" id="productListContainer">
      <% recommendation.slice(0, 5).forEach(product => { %>
      <a href="/products/<%= product._id %>" class="card product-card me-sm-3 mb-sm-3" style="text-decoration: none; color: rgb(81, 81, 81)">
        <img src="/uploads/<%= product.image_name %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title fw-bold" style="color: #80489c"><%= product.product_name %></h5>
          <h5 class="card-subtitle fw-bold">Rp <%= product.price.toLocaleString() %></h5>
          <p class="card-text excerpt mt-2"><%= (product.description).substring(0, 60) + "..." %></p>
          <div class="">
            <div class="btn btn-category badge"><%= product.category %></div>
          </div>
        </div>
      </a>
      <% }) %>
    </div>
  </div>
</div>
