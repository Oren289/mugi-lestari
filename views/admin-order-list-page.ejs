<div class="mt-5">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h3 class="fw-bold mb-4">Pesanan Masuk</h3>
          <div class="table-container">
            <table id="example" class="table table-striped text-center" style="width: 100%">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Order Id</th>
                  <th scope="col">Username</th>
                  <th scope="col">Timestamp</th>
                  <th scope="col">Order Status</th>
                  <th scope="col">Payment Status</th>
                  <th scope="col">No. Hp UMKM</th>
                  <th scope="col">Total Payment</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% let num = 0 %> <% orders.forEach(order => { %>
                <tr>
                  <th scope="row"><%= ++num %></th>
                  <td><%= (order.id).substring(0, 9) + "..." %></td>
                  <td><%= order.username %></td>
                  <td><%= (order.timestamp.toString()).substring(0, 21) %></td>
                  <td><%= order.orderStatus %></td>
                  <td><%= order.paymentStatus %></td>
                  <td><%= order.no_hp_umkm %></td>
                  <td>Rp <%= order.grandTotal.toLocaleString() %></td>
                  <td class="d-flex">
                    <a href="/admin-order-list/<%= order.id %>" class="btn btn-info btn-sm me-md-1"><i class="bi bi-info-circle-fill"></i></a>
                    <a href="/admin-order-list/delete/<%= order.id %>" class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i></a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
